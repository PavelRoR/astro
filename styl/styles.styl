*
    margin: 0
    padding: 0
    outline: 0
    box-sizing border-box
a
    &:hover
    &:focus
        text-decoration: none
        outline: 0
        color: initial
iframe 
    border: 0
section
    padding: 100px 0

h1
    font-size: 35px;
    font-family: 'Oswald', arial;
    color: #fff
    line-height: 1.2
    text-align: left;
    text-shadow: 0px 1px 30.96px rgba(0, 0, 0, 0.75);
    width 67%
    position relative
    z-index: 9

h3
    font-size: 40px;
    font-family: 'Oswald', arial;
    color: #fff
    line-height: 1
    text-align: center;
    letter-spacing: -1.1px;
    &:after
        content: ''
        display: block
        width: 68px
        height: 4px
        margin: 15px auto 70px
        background-color: #288ba0

@import 'parts/first_screen'