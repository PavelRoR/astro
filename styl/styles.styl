*
	margin: 0
	padding: 0
	outline: 0
	box-sizing border-box
a
	&:hover
	&:focus
		text-decoration: none
		outline: 0
		color: initial
iframe 
	border: 0
section
	padding: 100px 0

h1
	font-size: 35px;
	font-family: 'OswaldMedium', arial;
	color: #fff
	line-height: 1.2
	text-align: left;
	text-shadow: 0px 1px 30.96px rgba(0, 0, 0, 0.75);
	width 67%
	position relative
	z-index: 9

h3
	font-size: 40px;
	font-family: 'OswaldMedium', arial;
	color: #fff
	line-height: 1
	text-align: center;
	letter-spacing: 1.1px;
	&:after
		content: ''
		display: block
		width: 68px
		height: 4px
		margin: 15px auto 70px
		background-color: #288ba0

a.button
	font-family: 'OswaldMedium', arial;
	min-width: 300px
	width: 0
	margin: 0 auto
	display block
	padding-top: 5px
	margin: 70px auto 0
	&:hover
	&:focus
		color: #fff
@import 'parts/first_screen'
@import 'parts/mail_section'
@import 'parts/risons'
@import 'parts/plan'
@import 'parts/author'
@import 'parts/testimonials'
@import 'parts/footer'

/* Medias */
@media screen and (max-width: 1200px)
	.contacts .fa
		margin 0 5px 0 40px
	.aut_n_date p
		float: none
		&first-child
			margin-right: 0
	#lidia_main
		right 0
	.plan_wrapper
	#moon
		width: 100%
	.author_wrapper img
		bottom: -18px;
		margin-bottom: 18px;
	.education
		a>img
			width: 90%
@media screen and (max-width: 992px)
	#logo
		display block
		margin: 0 auto 10px
		float: none
	.contacts
		float: none
		text-align: center
		a:nth-child(2)
			margin: 0 10px
		.fa
			margin: 0 5px;