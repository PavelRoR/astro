#table_section
	background-image url(../img/12.jpg);
	background-repeat no-repeat
	background-position center
	background-size: cover
	color: #fafbfe;
	text-align: center;
#pay_table
#mob_pay_table
	width: 100%
	font-size: 16px
	font-family: "OpenSansRegular", arial;
	color: rgba(0,0,0,0.9);
	line-height: 1.1;
	border: 1px solid rgba(#aaa,1);
	border-radius: 5px;
	background-color: rgba(255,255,255,.95);
	border-collapse: inherit;
	margin-bottom: 40px
	tr
		th
			font-size: 20px
			font-family: "OpenSansSemibold", arial;
			text-align: center
			padding: 10px
			border: 1px solid rgba(#eee,1);
			&:nth-child(2)
				color:#828282
			&:nth-child(3)
				color:#9e8b3d
			&:nth-child(4)
				color:#aa723d
		td
			padding: 10px 20px
			border: 1px solid rgba(#eee,1);
			&:first-child
				text-align: left;
				width: 60%
				strong 
					color: #88d6e7
					font-size: 120%
			&.plus:nth-child(2)
				color: #828282
				font-size: 48px
				font-family: "OpenSansSemibold", arial;
				padding: 0 20px
			&.plus:nth-child(3)
				color: #9e8b3d
				font-size: 48px
				font-family: "OpenSansSemibold", arial;
				padding: 0 20px
			&.plus:nth-child(4)
				color: #aa723d
				font-size: 48px
				font-family: "OpenSansSemibold", arial;
				padding: 0 20px
			&.initial
				font-size: 18px
	.hours td
		&:nth-child(2)
			color: #828282
			font-size: 22px
			font-family: "OpenSansSemibold", arial;
		&:nth-child(3)
			color: #9e8b3d
			font-size: 22px
			font-family: "OpenSansSemibold", arial;
		&:nth-child(4)
			color: #aa723d
			font-size: 22px
			font-family: "OpenSansSemibold", arial;
	.full
	.sale
	.today
		font-size: 20px
		font-family: "OpenSansSemibold", arial;
	.full td
		text-decoration: line-through
		&:first-child
			text-decoration: none
	.sale
		color: red
	.today
		color #00FF7F
	.buttons
		td
			padding: 0
			.button
				width: 100%
				height: 100%
				margin: 0
				min-width: 0
				line-height: 1.9;
				padding: 0;
.alert-danger
	color: #a94442;
	background-color: #f2dede;
	padding: 15px;
	margin-bottom: 20px;
	border: 1px solid #ebccd1;
	border-radius: 4px;
	margin-top: 40px;
	font-size: 32px;
#mob_pay_table
	display: none
	text-align: center
	width: 560px
	margin: 0 auto 40px
#mob_pay_table tr td:first-child
	text-align: center