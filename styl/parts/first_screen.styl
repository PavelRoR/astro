#main_screen
    background-image: url(../img/first_screen_back.jpg)
    background-repeat: no-repeat
    background-position: center top
    background-size cover
    width 100%
    overflow: hidden
#header
    padding: 20px 18px 20px 5px
    overflow hidden
#logo
    float: left
.contacts
    float: right
    text-align: right
    .fa
        color: #2fa7be
        font-size: 18px
        margin: 0 15px 0  40px
        &.fa-phone
            margin-left: 0
    .fa+span
        font-size: 18px;
        font-family: "OpenSansBold", arial;
        color: #fcfafa
        line-height: 26px
        text-align: right;
#first_screen_section
    padding: 0
    .container
        position: relative
        z-index: 9
        text-align: left
#pre
    font-size: 28px;
    font-family: 'OswaldRegular', arial;
    color: #57def8
    text-shadow: 0px 1px 30.96px rgba(0, 0, 0, 0.75);
    line-height: 21px
.aut_n_date
    overflow hidden
    p
        font-size: 24px;
        font-family: "OpenSansSemibold", arial;
        color: #51cee6
        text-shadow: 0px 1px 30.96px rgba(0, 0, 0, 0.75)
        float left
        &:first-child
            margin-right: 100px
        span
            font-family: "OpenSansBold", arial;
            color: #fff
 .video_wrapper
    width: 50%
    margin: 15px 0
    border-radius: 5px;
    background-color: #fff
    position relative
    &:before
        content: ''
        height: 0
        padding-top: 56.25%
        display block
    iframe
    img
        position absolute
        top: 0
        left: 0
        border-radius: 5px;
        width: 100%
        height: 100%
        cursor pointer
#lidia_main
    position absolute
    bottom: -65px;
    right: 35px;
    width: 30%
    z-index: -1
#course_first_screen_section
#rec_first_screen_section
    #pre
        text-align: center
    h1
        text-align: center
        margin: 30px 0
    .aut_n_date p
        text-align: center
    .aut_n_date
        width: 675px
        margin: 0 auto
        p
            float: none
            display: inline-block
#course #main_screen
    background-image url(../img/4.jpg)
