.hw_pic img {
	width: 40%;
	margin: 0 auto;
	display block
}

.popup_back {
	display: none;
	position: fixed;
	background: rgba(0, 0, 0, 0.7);
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	z-index: 999999
}

.popup_inner {
	position: absolute;
	left: 0;
	right: 0;
	z-index: 9999995;
	margin: 0 auto;
	padding: 20px;
	height: 90vh;
	width: auto
}

.popup_inner img {
	display: block;
	margin: 0 auto;
	height: auto
	width: 100%
}

.close {
	top: 50px;
	right: 40px;
	width: 29px;
	height: 29px;
	position: absolute;
	padding: 0;
	background: url("../img/close.png") 50% no-repeat;
	cursor: pointer
}
